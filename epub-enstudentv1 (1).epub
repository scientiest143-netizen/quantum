<!DOCTYPE html>
<html>
<head>
    <title>India Quantum Demo App</title>
    <style>
        body { background: #121212; color: white; font-family: sans-serif; text-align: center; }
        video { width: 80%; border: 2px solid #00ffcc; border-radius: 10px; margin-top: 20px; }
        .data-box { margin: 20px; padding: 15px; background: #1e1e1e; border-radius: 10px; }
        .meter { font-size: 24px; color: #00ffcc; font-weight: bold; }
        .status-red { color: #ff4b2b; }
        .status-white { color: #ffffff; }
    </style>
</head>
<body>
    <h2>Quantum State Observer</h2>
    <video id="webcam" autoplay playsinline></video>
    
    <div class="data-box">
        <div class="status-red">Red Qubit (LED 1): <span id="redState">Searching...</span></div>
        <div class="status-white">White Qubit (LED 2): <span id="whiteState">Searching...</span></div>
    </div>

    <canvas id="canvas" style="display:none;"></canvas>

    <script>
        const video = document.getElementById('webcam');
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');

        // Start Camera
        navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } })
            .then(stream => { video.srcObject = stream; });

        function analyzeFrame() {
            if (video.readyState === video.HAVE_ENOUGH_DATA) {
                canvas.width = video.videoWidth;
                canvas.height = video.videoHeight;
                ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
                
                // Sample center pixels
                let frame = ctx.getImageData(canvas.width/2, canvas.height/2, 50, 50);
                let totalRed = 0, totalWhite = 0;

                for (let i = 0; i < frame.data.length; i += 4) {
                    let r = frame.data[i];
                    let g = frame.data[i+1];
                    let b = frame.data[i+2];
                    
                    if (r > 150 && g < 100) totalRed++; // Detect Red
                    if (r > 200 && g > 200 && b > 200) totalWhite++; // Detect White
                }

                // Logic for "Superposition" based on pixel density/flicker
                document.getElementById('redState').innerText = totalRed > 10 ? "SUPERPOSITION (?)" : "State |0>";
                document.getElementById('whiteState').innerText = totalWhite > 10 ? "MEASURED |1>" : "State |0>";
            }
            requestAnimationFrame(analyzeFrame);
        }
        analyzeFrame();
    </script>
</body>
</html>